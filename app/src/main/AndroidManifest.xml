<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.zup.omdbapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".context.Contexto"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.DescriptionActivity" />
        <activity
            android:name=".activities.GaleryActivity"
            android:screenOrientation="nosensor" />
        <activity android:name=".activities.IMDbWebViewActivity"></activity>
    </application>

</manifest>